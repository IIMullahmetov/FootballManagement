<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="8dp"
    android:background="@color/gray_light">

    <ImageView
        android:id="@+id/iv_reviewer_photo"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:minHeight="20dp"
        android:src="@drawable/member_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_reviewer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="asdasdasdg"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/iv_reviewer_photo"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/iv_reviewer_photo"
        app:layout_constraintTop_toBottomOf="@+id/tv_reviewer_name" />


</android.support.constraint.ConstraintLayout>